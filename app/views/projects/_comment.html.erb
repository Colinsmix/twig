<%= form_for([@project, @comment]) do |f| %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>

  <%= f.submit 'submit comments' %>
<% end %>

<% @project.comments.reverse.each do |c| %>
  <p><b><%= "#{c.created_at.strftime("%b %d, %Y")} - #{current_user.first_name}" %></b>: <%= c.comment %></p>
<% end %>
