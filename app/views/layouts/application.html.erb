<html lang="en">
  <head>
    <% provide(:title, 'NewBranches') %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class='wrapper'>
      <nav class="top-bar" data-topbar>
        <ul class="title-area">
          <li class="name">
            <h1><%= link_to 'LS-Twig', root_path %></h1>
          </li>
        </ul>
        <section class="top-bar-section">
          <ul class="right">
            <% if user_signed_in? %>
              <li class="name"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li class="name"><%= link_to "Sign In", user_omniauth_authorize_path(:google_oauth2) %><br></li>
            <% end %>
          </ul>
        </section>
      </nav>

      <% flash.each do |name, msg| %>
        <%= msg %>
      <% end %>

      <div class="row">
        <div class="small-10 small-centered columns columns">
          <%= yield %>
        </div>
      </div>
    </div><!--wrapper ends--!>
    <div class='push'></div>

    <div class='footer'>
      Created By <a href='https://github.com/jmoon90'>John Moon</a>
    </div>
  </body>
      <%= javascript_include_tag "application" %>
  </html>
