<h1><%= @post.name %></h1>

<p><%= @post.description %></p>

<ul>
<%= @post.feedbacks.each do |fb| %>
  <li><%=fb.comment %></li>
<% end %>
</ul>


<% if user_signed_in? %>
  <%= form_for([@post, @feedback]) do |f| %>

    <% if @feedback.errors.any? %>
      <ul>
        <% @feedback.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>

    <div>
      <%= f.label :comment %>
      <%= f.text_field :comment %>
    </div>

    <%= f.submit "Submit Feedback" %>
  <% end %>
<% end %>

